<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <style>
      body {
        margin: 0;
        padding: 0;
        height: 100vh; /* Chiều cao toàn màn hình */
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: black;
        overflow: hidden;
        font-family: 'Courier New', monospace;
        color: white;
      }

      /* Background image */
      body::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('https://elizawakesup.ai/eliza-eyes-closed.jpeg'), 
                          linear-gradient(to bottom, rgba(0, 0, 50, 0.8), rgba(0, 0, 0, 0.9));
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        filter: brightness(0.4); /* Làm tối hình ảnh */
        z-index: -1; /* Đẩy nền xuống dưới nội dung */
      }

      /* Nội dung */
      .content {
        text-align: center;
        z-index: 1;
        margin-bottom: 20px;
      }

      .content h1 {
        font-size: 4rem;
        color: #00ff00b6; /* Màu xanh lục neon cho chữ */
        margin: 0;
      }

      .content h2 {
        font-size: 2rem;
        color: #00ff00b6;
        margin-top: 10px;
      }

      .content button {
        padding: .75rem 2rem;
        color: #00ff00b6;
        font-size: 1em;
        background-color: transparent;
        border: 2px solid #00ff00b6;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease, color 0.3s ease;
      }

      .content button:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 15px #00ff00b6;
        background-color: #00ff0067;
      }

      /* Liên kết đăng xuất */
      .logout {
        color: #00ff00b6;
        text-decoration: none;
        font-size: 1.2rem;
        margin-top: 20px;
      }

      .logout:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <div class="content">
      <h1>Hello, {{naming}}!</h1> <!-- Đoạn này sẽ hiển thị tên người dùng -->
      <a href="/" class="logout">Logout</a> <!-- Liên kết đăng xuất -->
    </div>
  </body>
</html>
